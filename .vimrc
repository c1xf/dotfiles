" display
set number
set encoding=utf-8
syntax on
set showcmd
set t_Co=256
set wrap

" format
filetype indent on
set autoindent

" search
set showmatch
set hlsearch
set incsearch

" edit
set spell spelllang=en_us

" map noremap d "_d
map <Space> <Leader>
noremap <Leader>y "*y
noremap <Leader>p "*p
noremap <Leader>d "*d
